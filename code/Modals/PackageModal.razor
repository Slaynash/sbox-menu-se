@namespace Menu.Modals
@inherits Menu.Modals.BaseModal
@using Sandbox;
@using Menu;
@using System;
@attribute [StyleSheet]

<root class="package-modal">

    <WebPanel class="browser" Url=@Url></WebPanel>
                
</root>

@code
{
    public string PackageIdent { get; set; }
    public string Url;

    protected override void OnParametersSet()
    {
        Url = $"https://asset.party/{PackageIdent.Replace('.', '/')}?viewmode=game";
    }
}
